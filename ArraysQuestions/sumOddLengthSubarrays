class Solution {
    public int sumOddLengthSubarrays(int[] arr) {
        
        int sum = 0;

        for(int i=0; i<arr.length; i++) {
            int ans = 0;
            int count = 0;
            for(int j=i; j<arr.length; j++) {
                ans += arr[j];
                count++;

                if(count % 2 != 0) sum += ans;
            }
        }

        return sum;
    }
}
