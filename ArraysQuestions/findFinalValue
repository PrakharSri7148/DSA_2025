class Solution {
    public int findFinalValue(int[] nums, int original) {
        
        HashSet<Integer> set = new HashSet<>();
        int search = original;

        for(int i : nums) set.add(i);

        while(set.contains(search)) {
            search = search * 2;
        }

        return search;
    }
}

class Solution {
    public int findFinalValue(int[] nums, int original) {
        
        int n = nums.length;
        for(int i=0; i<n; i++) {
            if( nums[i] == original) {
                original *= 2;
                i=-1;
            }
        }

        return original;
    }
}
