class Solution {
    public int maxAdjacentDistance(int[] nums) {
        
        int max = Integer.MIN_VALUE;

        for(int i=0; i<nums.length-1; i++) {
            int m = nums[i];
            int n = nums[i+1];
 
            int dif = m - n;
            if(dif < 0) dif = -(dif);

            max = Math.max(max, dif);
        }

        int dif2 = nums[nums.length-1] - nums[0];
        if(dif2 < 0) dif2 = -(dif2);
        max = Math.max(max, dif2);

        return max;
    }
}
