class Solution {
    public int absDifference(int[] nums, int k) {
        
        Arrays.sort(nums);
        
        int min_sum = 0;
        for(int i=0; i<k; i++) {
            min_sum += nums[i];
        }

        int max_sum = 0;
        for(int i=nums.length-1; i>=nums.length - k; i--) {
            max_sum += nums[i];
        }

        return max_sum - min_sum;
    }
}
