class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        
        int[] arr = new int[nums1.length + nums2.length];
        int k =0;
        for(int i: nums1) arr[k++] = i;
        for(int i: nums2) arr[k++] = i;

        Arrays.sort(arr);

        double ans;
        if(arr.length % 2 != 0) return (double)arr[arr.length/2];
        else {
            ans = (double)(arr[arr.length/2] + arr[arr.length/2-1])/2;
        }
        
        return ans;
    }
}
