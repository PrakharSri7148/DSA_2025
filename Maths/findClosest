class Solution {
    public int findClosest(int x, int y, int z) {

        while( x != z && y != z) {
            if(x<z) x++;
            else x--;

            if(y>z) y--;
            else y++;

            
        }

        if(x != y && x == z) return 1;
        else if(x != y && y == z) return 2;
        
        return 0;
    }
}
