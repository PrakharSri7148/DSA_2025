class Solution {
    public int smallestNumber(int n, int t) {
        
        while(n<=100) {
            int product = 1;
            int copy = n;
            while(copy != 0) {
                int digit = copy%10;
                product *= digit;
                copy /= 10;
            }

            if( product % t == 0) return n;
            else n++;
        }

        return 0;

    }
}
