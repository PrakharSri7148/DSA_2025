class Solution {
    public int titleToNumber(String columnTitle) {
        
        char[] arr = columnTitle.toCharArray();

        int num = 0;
        int power = 1;
        for(int i = arr.length-1; i>=0; i--) {
            char ch = arr[i];
            int digit = (int)(ch) - 64;
            num = num + digit*power;
            power *= 26;
        } 

        return num;
    }
}
