class Solution {
    public int mirrorDistance(int n) {
        
        int copy_num = n;
        int new_num = 0;

        while(n != 0) {
            int digit = n%10;
            new_num = new_num *10 + digit;
            n = n/10;
        }

        int diff = copy_num - new_num;
        if(diff<0) return -diff;


        return diff;

    }
}
